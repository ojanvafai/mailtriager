service cloud.firestore {
  match /databases/{database}/documents {
    // Allow user access to only their own data.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId;
    }
    match /global/version {
      allow read;
    }
  }
}
